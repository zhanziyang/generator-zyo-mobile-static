@require "util";

html, body {
  height: 100%;
}

.page {
  overflow-x: hidden;
  min-height: 100%;
  color: black;
  background: #efefef;
  position: relative;
  clearfix();
  @media screen and (min-width: $screen_breakpoint) {
    width: $width_on_lg;
    margin: 0 auto;
  }
}

.mask {
  absCover(fixed)
  z-index: 1000;
  display: none;
  background: rgba(0, 0, 0, .8);
  #loading {
    position: absolute;
    width: 100%;
    height: 100%;
    display: none;
  }
}

.dialog {
  display: none;
  width: $dialog_width;
  absCenter();
  z-index: 1001;
}

